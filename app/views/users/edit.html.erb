<% content_for :heading do %>
  <p>
    Keep your profile up to date in order to get the most out of <em>Coitus Cupid</em>.  Fill in your information then click on 'Update' to save your changes
  </p>
  <p>For security purposes, please enter your password before submitting any changes.</p>


<%= error_messages_for( @user ) %> 
  

<%= form_for @user, :html => { :multipart => true, :class => "form-horizontal" } do |f| %>

<fieldset>
  

  <div class="row">
    <div class="span4">
      <h2>Basics</h2>

      <div class="control-group">
        <%= f.label :name, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :dob, "Birthday", :class => "control-label" %>
        <div class="controls">
          <%= f.date_select :dob, :start_year => 1940,
                              :end_year => (Time.now.year - 18),
                              :include_blank => true %>
        </div>
      </div>

      <div class="control-group">
    <%= f.label :gender, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :gender %>
    </div>
</div>

<div class="control-group">
    <%= f.label :location, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :location %>
    </div>
</div>

<div class="control-group">
    <%= f.label :avatar, :class => "control-label" %>
    <div class="controls">
      <%= f.file_field :avatar %>
    </div>
</div>







<div class="control-group">
    <%= f.label :twitter, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :twitter %>
    </div>
</div>

<br />

  <h2>Account Settings</h2>

        <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
</div>

<div class="control-group success">
    <%= f.label :password, :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
</div>

<div class="control-group error">
    <%= f.label :password_confirmation, "Confirm", :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
      <span class="help-inline">Please confirm changes with your password</span>
    </div>
</div>



    </div>

    <div class="span5 offset1">
      <h2> Profile </h2>
      <p>
        You can use markdown in these fields to format your text.  For help on how to do this, see <%= link_to "this tutorial", "http://www.simpleeditions.com/59001/markdown-an-introduction" %>.
      </p>

      <div class="control-group">
    <%= f.label :about, "Who you are", :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :about, :class => "span5", :rows => 15 %>
    </div>
</div>

<div class="control-group">
    <%= f.label :looking_for, "What you're looking for", :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :looking_for, :class => "span5", :rows => 15 %>
    </div>
</div>




      
    </div>


  </div>

      


<div class="form-actions">
  <%= f.button "Update", :class => "btn btn-primary" %>
</div>







  




</fieldset>
<% end %>

<% end -%>



