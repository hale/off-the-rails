<%= form_for @message, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Message</legend>

    <div class="control-group">
      <%= f.label :user_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :user_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :sender_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :sender_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :read, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :read, :class => 'check_box' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :msg_type, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :msg_type, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :message, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :message, :class => 'text_area' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', messages_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
