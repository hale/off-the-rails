<h1>/Message</h1>

<p>
  <b>User</b><br>
  <%= @message.user_id %>
</p>

<p>
  <b>Sender</b><br>
  <%= @message.sender_id %>
</p>

<p>
  <b>Read</b><br>
  <%= @message.read %>
</p>

<p>
  <b>Msg type</b><br>
  <%= @message.msg_type %>
</p>

<p>
  <b>Message</b><br>
  <%= @message.message %>
</p>

<div class="form-actions">
  <%= link_to 'Back', messages_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_message_path(@message), :class => 'btn' %>
  <%= link_to 'Delete', message_path(@message), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
