<%= form_for(:session, :url => {:action => 'create', :controller => 'sessions'}, :html => {:class => 'form-inline pull-right'} ) do |f| %>
    <%= f.text_field :email, :placeholder => "Email", :class => 'input-small' %>
    <%= f.password_field :password, :placeholder => "Password", :class => 'input-small'   %>
    <%= f.button "Sign in", {:class => 'btn btn-success btn-mini'} %>
<% end %>